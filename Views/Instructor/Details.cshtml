@model Instructor

@{
    ViewData["Title"] = "Details";
}



<div class="container">

    <div class="row justify-content-center">
        
        <h1 class="my-4">Instructor Details</h1>

        <div class="card" style="width:300px">
            <img class="card-img-top" src="/Images/@Model.InsImage" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">@Model.InsName</h4>
                <p class="card-text">ID : @Model.InsId</p>
                <p class="card-text">Salary : @Model.InsSalary</p>
                <p class="card-text">Address :@Model.InsAddress</p>
                <p class="card-text">Department Id : @Model.DeptId</p>
                <p class="card-text">Course Id : @Model.CrsId</p>
                <a class="btn btn-outline-secondary" asp-action="Index">Show all Instructors</a>
            </div>
        </div>
    </div>

</div>


