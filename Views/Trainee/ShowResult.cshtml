@model TaskDay2.ViewModels.TraineeCourseResultViewModel


<div class="Container">
    <div class="row justify-content-center">

        <h1 class="my-4">Result</h1>
        
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>Trainee Name</th>
                    <th>Course Name</th>
                    <th>Course Degree</th>
                    <th>Course Status</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="color:@Model.Color;">@Model.TraineeName </td>
                    <td style="color:@Model.Color;">@Model.CourseName</td>
                    <td style="color:@Model.Color;">@Model.CourseDegree</td>
                    <td style="color:@Model.Color;">@(Model.Color == "red" ? "Fail" : "Pass")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


