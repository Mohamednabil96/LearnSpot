@model Department

@{
    ViewData["Title"] = "Details";
}

<div class="container">

    <div class="row justify-content-center">

        <h1 class="my-4">Department Details</h1>

        <div class="card" style="width:300px">
            <div class="card-body">
                <h4 class="card-title">@Model.DeptName</h4>
                <p class="card-text">Department ID : @Model.DeptId</p>
                <p class="card-text">Department Manager : @Model.ManagerName</p>
                <a class="btn btn-outline-secondary" asp-action="Index">Show All Departments</a>
            </div>
        </div>
    </div>

</div>
